@model BankApplication.Models.Employee
@{
    ViewBag.Title = "Delete";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<style>
    body {
        background-color: CadetBlue;
    }
</style>

<div class="row">
    <div class="col-12">
        <h3 class="offset-3 mb-4 text-white">Are you sure to delete??</h3>

        @Html.HiddenFor(x => x.EmployeeId)
        <div class="form-group row mb-2 offset-1">
            @Html.LabelFor(x => x.EmployeeName, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.DisplayFor(x => x.EmployeeName)

            </div>
        </div>
        <div class="form-group row mb-2 offset-1">
            @Html.LabelFor(x => x.Email, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.DisplayFor(x => x.Email)

            </div>
        </div>
        <div class="form-group row mb-2 offset-1">
            @Html.LabelFor(x => x.Bank, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.DisplayFor(x => x.Bank.BankName)

            </div>
        </div>
        <div class="form-group row mb-2 offset-1">
            @Html.LabelFor(x => x.StratDate, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.DisplayFor(x => x.StratDate)

            </div>
        </div>
        <div class="form-group row mb-2 offset-1">
            @Html.LabelFor(x => x.EndDate, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.DisplayFor(x => x.EndDate)

            </div>
        </div>
        <div class="form-group row mb-2 offset-1">
            @Html.LabelFor(x => x.IsWorking, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.CheckBoxFor(x => x.IsWorking, new { @class = "form-check", disabled = "true" })

            </div>
        </div>
        <div class="form-group row mb-2 offset-1">
            @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                <img src="~/Pictures/@Model.Picture" class="img-thumbnail" style="width:50px" />

            </div>

        </div>

        @using (Html.BeginForm("Delete", "Employees", new { id = Model.EmployeeId }, FormMethod.Post))
        {
      <div class="form-group row mb-4 offset-1">
        <div class="col-2 offset-2">
            <button type="submit" class="btn btn-danger">Confirm Delete</button>

        </div>
      </div>
        }
    </div>
</div>

