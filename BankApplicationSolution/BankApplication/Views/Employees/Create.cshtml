@model BankApplication.EmployeeModel.EmployeeInputModel
@{
    ViewBag.Title = "Create";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<style>
    body {
        background-color: CadetBlue;
    }
</style>
<div class="row">
    <div class="col-12">
        <h3 class="offset-3 mb-4 text-white">Add New Employee</h3>
        @using (Html.BeginForm("Create", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group row mb-2 offset-1">
                @Html.LabelFor(x => x.EmployeeName, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.EmployeeName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-2 offset-1">
                @Html.LabelFor(x => x.Email, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-2 offset-1">
                @Html.LabelFor(x => x.BankId, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.DropDownListFor(x => x.BankId, new SelectList(ViewBag.Banks, "BankId", "BankName"), "Select", new { @class = "form-select form-select-sm" })
                    @Html.ValidationMessageFor(x => x.BankId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-2 offset-1">
                @Html.LabelFor(x => x.StratDate, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.StratDate, new { @class = "form-control form-control-sm date" })
                    @Html.ValidationMessageFor(x => x.StratDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-2 offset-1">
                @Html.LabelFor(x => x.EndDate, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control form-control-sm date" })
                    @Html.ValidationMessageFor(x => x.EndDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-2 offset-1">
                @Html.LabelFor(x => x.IsWorking, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.CheckBoxFor(x => x.IsWorking, new { @class = "form-check" })
                    @Html.ValidationMessageFor(x => x.IsWorking, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-2 offset-1">
                @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Picture, new { @class = "form-control form-control-sm", type = "file" })
                    @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-2 offset-1"></div>
            <div class="form-group row mb-2 offset-1">

                <div class="col-2">
                    @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-primary" })
                </div>
                <div class="col-4 ">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>

        }
    </div>
</div>
@section styles{
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $(".date").datepicker({
            format: "yyyy-mm-dd"
        });
    </script>
}




