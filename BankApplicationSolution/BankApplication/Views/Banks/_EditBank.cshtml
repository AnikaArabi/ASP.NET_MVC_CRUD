@model BankApplication.Models.Bank
@using (Ajax.BeginForm("EditBatch", "Banks", new { }, new AjaxOptions
{
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "alert",
    LoadingElementId = "spinner"

}, new { id = "bk" }))
{
    @Html.HiddenFor(x => x.BankId)
    <div class="form-group row mb-2 offset-1">
        @Html.LabelFor(x => x.BankName, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.BankName, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.BankName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-2 offset-1">
        @Html.LabelFor(x => x.Branch, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.EnumDropDownListFor(x => x.Branch, new { @class = "form-select form-select-sm" })
            @Html.ValidationMessageFor(x => x.Branch, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-2 offset-1">
        @Html.LabelFor(x => x.EstablishDate, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.EstablishDate, new { @class = "form-control form-control-sm date" })
            @Html.ValidationMessageFor(x => x.EstablishDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-2 offset-1">
        @Html.LabelFor(x => x.ContactNumber, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.ContactNumber, new { @class = "form-control form-control-sm", type = "number" })
            @Html.ValidationMessageFor(x => x.ContactNumber, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-2 offset-1">
        @Html.LabelFor(x => x.RoutingNumber, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.RoutingNumber, new { @class = "form-control form-control-sm", type = "number" })
            @Html.ValidationMessageFor(x => x.RoutingNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-2 offset-1"></div>
    <div class="form-group row mb-2 offset-1">

        <div class="col-2">
            @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-primary" })
        </div>
        <div class="col-4 ">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}

